mixin scripts
  script(src='assets/js/misc/jquery.js', type='text/javascript')
  script(src='assets/js/misc/tools.js', type='text/javascript')
  script(type="text/javascript" src="https://www.gstatic.com/charts/loader.js")
  script(src='assets/js/data.js', type='text/javascript')
  script(src='assets/js/functions.js', type='text/javascript')
  script(src='assets/js/chart.js', type='text/javascript')
  
mixin chart
  .chart-box
    #curve_chart(style="width: 100vw; height: 70vh")

mixin controls
  .controls
    .time-control
      h1 Time #[span.light (How long it lasts in weeks)].
      input#tInput(type="range" min="1" max="104" step="0.001" onmousemove="update(); chart()" width="50vw")
    .other
      .variable-control
        ul.variables
          li.alpha-control α #[span.light (Chance of infection on bite)]
            input#aInput(type="range" min="0" max="1" step="0.001" onmousemove="update(); chart()")
            span = #[span#aVal.bold]
          li.beta-control β #[span.light (Rate that zombies die)]
            input#bInput(type="range" min="0" max="1" step="0.001" onmousemove="update(); chart()")
            span = #[span#bVal.bold]
          li.q-control Q #[span.light (Rate the dead become zombies)]
            input#qInput(type="range" min="0" max="1" step="0.001" onmousemove="update(); chart()") 
            span = #[span#qVal.bold]
          
      .population-control
        ul.pop-variables
          li.s-control S #[span.light (The amount of people that can be infected)] = #[span#sVal.bold]
            //input#sInput(type="range" min="0" max="1" step="0.001" onmousemove="update(); chart()" value="0.9")
          li.z-control Z #[span.light (The amount of people that are already zombies)] = #[span#zVal.bold]
            //input#zInput(type="range" min="0" max="1" step="0.001" onmousemove="update(); chart()" value="0.1")
          li.r-control R #[span.light (The amount of people that are dead already)] = #[span#rVal.bold]
            //input#rInput(type="range" min="0" max="1" step="0.001" onmousemove="update(); chart()" value="0") 
